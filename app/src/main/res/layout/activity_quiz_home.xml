<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".QuizHomeActivity">

        <!--Welcome Text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="start">

            <!--Welcome Text-->
            <TextView
                android:id="@+id/welcomeTextMain"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="@string/hello_saad_greeting" />
        </LinearLayout>

        <!--Category Text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

        <!--Category Text-->
            <TextView
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:textSize="25sp"
                android:text="@string/categories_text" />
        </LinearLayout>



        <!--Linear Layout for Python and Java -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!--Python-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:orientation="vertical">

                    <!--Image, Title, Button-->
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:padding="10dp"
                       android:background="@drawable/card_background"
                       android:gravity="center">

                    <!-- Media -->
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/python_logo"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/python_text"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                       <com.google.android.material.button.MaterialButton
                           android:id="@+id/python_quiz_button"
                           style="?attr/badgeStyle"
                           android:layout_width="140dp"
                           android:layout_height="40dp"
                           android:textSize="14sp"
                           android:text="@string/start_quiz_text"
                           tools:ignore="DuplicateSpeakableTextCheck" />

                </LinearLayout>

                    <!--Progress Bar-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <!--Progress Bar 1-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="15dp"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/python_easy_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:max="100"
                                android:indeterminateTint="#8BC34A"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:progressDrawable="@drawable/circle" />

                            <TextView
                                android:id="@+id/python_easy_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_percentage_string"/>
                        </LinearLayout>

                        <!--Progress Bar 2-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="15dp"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/python_medium_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:max="100"
                                android:indeterminateTint="#FF9800"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:progressDrawable="@drawable/circle" />

                            <TextView
                                android:id="@+id/python_medium_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_percentage_string"/>
                        </LinearLayout>

                        <!--Progress Bar 3-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/python_hard_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:max="100"
                                android:indeterminateTint="#F44336"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:progressDrawable="@drawable/circle" />

                            <TextView
                                android:id="@+id/python_hard_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_percentage_string" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>




